{
  "name": "react-ts-starter",
  "author": {
    "name": "Davi S Bento",
    "url": "https://github.com/davisbento/react-ts-starter",
    "email": "davisilva4222@gmail.com"
  },
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start-js": "react-scripts-ts start",
    "start": "concurrently \"npm run watch-css\" \"npm run start-js\"",
    "build-js": "react-scripts-ts build",
    "build": "concurrently \"npm run build-css\" \"npm run build-js\"",
    "build-css": "node-sass-chokidar src/ -o src/",
    "watch-css": "npm run build-css && node-sass-chokidar src/ -o src/ --watch --recursive",
    "test": "react-scripts-ts test --env=jsdom",
    "eject": "react-scripts-ts eject"
  },
  "husky": {
    "hooks": {
      "pre-commit": "concurrently -r \"yarn tslint -p tsconfig.json\" \"yarn tsc --noEmit\"",
      "post-merge": "yarn"
    }
  },
  "dependencies": {
    "date-fns": "^1.30.1",
    "lodash": "^4.17.11",
    "node-sass-chokidar": "^1.3.4",
    "npm-run-all": "^4.1.5",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-router-dom": "^5.0.0",
    "react-scripts-ts": "3.1.0",
    "tslib": "^1.9.3",
    "tslint-eslint-rules": "^5.4.0"
  },
  "devDependencies": {
    "@types/jest": "^24.0.11",
    "@types/lodash": "^4.14.123",
    "@types/node": "^11.13.0",
    "@types/react": "^16.8.12",
    "@types/react-dom": "^16.8.3",
    "@types/react-router-dom": "^4.3.1",
    "concurrently": "^4.1.0",
    "husky": "^1.3.1",
    "tslint-react": "^4.0.0",
    "typescript": "^3.4.1"
  }
}
